    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "paths": {
      "@nbody": ["./src"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}